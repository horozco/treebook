<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class= "navbar navbar-fixed-top" >
		<div class="navbar-inner">
			<div class "contaniner">
				<a href="#" class="brand">TreeBook</a>	
				<ul class="nav">
					<li><%=link_to "All Statuses" , statuses_path%></li>
				</ul>
				<%if user_signed_in? %>
					<ul class = "nav pull-right">
						<li><%=link_to current_user.full_name, edit_user_registration_path%> </li>
						<li><%=link_to "Log Out", destroy_user_session_path, method: :delete%></li>
					</ul>
				<%else%>
					<ul class = "nav pull-right">
						<li><%=link_to "Registrer", new_user_registration_path%> </li>
						<li><%=link_to "Sign In", new_user_session_path%> </li>
					</ul>
				<%end%>
				
			</div>
		</div>
	</div>

	<footer class= "navbar navbar-fixed-bottom">
		<div class="navbar-inner">
			<div class="container">
				<a href="http://www.koombea.com" class ="brand">&copy; Koombea 2012</a> 
			</div>
		</div>
	</footer>


	<div class="contaniner">

		<%if notice%>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<p class="notice"><%= notice %></p>	
			</div>
		<%end%>
		<%if alert%>
			<div class="alert alert-error">
				<button type="button" class="close" data-dismiss="alert">×</button>
				<p><%= alert %></p>
			</div>
		<%end%>
	</div>

	<div id="yield" class="container">
		<%= yield %>
	</div>

</body>

</html>
