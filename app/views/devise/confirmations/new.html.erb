<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }), :html => {:class => 'form-horizontal'} do |f| %>
  
  <%= devise_error_messages! %>

  <%=f.input :email%>
  
  <div><%= f.submit "Resend confirmation instructions" %></div>
<% end %>

